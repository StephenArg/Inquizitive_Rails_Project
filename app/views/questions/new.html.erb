<h1>Create a New Question</h1>

<%= form_for @question, html: {class: "ui small form"} do |f|%>

    <%if @question.errors.any? %>
        <h2>Errors:</h2>
        <ul>
            <%@question.errors.full_messages.each do |message|%>
            <li><%=message%></li>
            <%end%>
        </ul>
        <%end%>

    <p>
        <%=f.label :question %> <br>
        <%=f.text_area :question %> <br>
    </p>

    <p>
        <%=f.label :answer %> <br>
        <%=f.text_field :answer %> <br>
    </p>

    <p>
            <%=f.label :subject %> <br>
            <%=f.text_field :subject %> <br>
    </p>

    <p>
            <%=f.label :topic %> <br>
            <%=f.text_field :topic %> <br>
     </p>
    
    

    <p>
        <%=f.label :image_url %> <br>
        <%=f.text_field :image_url %> <br>
     </p>


    <p>
        <%=f.submit "Create Question"%>
    </p>

<%end%>