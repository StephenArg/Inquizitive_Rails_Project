<h1>Login page</h1>

<%= form_for @user, url: login_post_user_url, method: :post do |f|%>

    <%if @user.errors.any? %>
        <h2>Errors:</h2>
        <ul>
            <%@user.errors.full_messages.each do |message|%>
            <li><%=message%></li>
            <%end%>
        </ul>
        <%end%>

    <p>
        <%=f.label :email %> <br>
        <%=f.text_field :email %> <br>
    </p>

    <p>
        <%=f.label :password %> <br>
        <%=f.password_field :password %> <br>
    </p>


    <p>
        <%=f.submit "Login"%>
    </p>

<%end%>