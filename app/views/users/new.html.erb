<h1>Create a New User!</h1>

<%= form_for @user do |f|%>
    <%if @user.errors.any? %>
        <h2>Errors:</h2>

        <ul>
            <%@user.errors.full_messages.each do |message|%>
            <li><%=message%></li>
            <%end%>
        </ul>
        <%end%>

    <p>
        <%=f.label :name %> <br>
        <%=f.text_field :name %> <br>
    </p>

    <p>
        <%=f.label :email %> <br>
        <%=f.text_field :email %> <br>
    </p>

    <p>
        <%=f.label :password %> <br>
        <%=f.password_field :password %> <br>
    </p>


    <p>
        <%=f.submit "Create User"%>
    </p>

<%end%>